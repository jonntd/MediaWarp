Port: 9096                                  # MediaWarp 监听端口

MediaServer:                                # 媒体服务器设置
  Type: Emby                                # 媒体服务器类型（目前仅支持 Emby）
  ADDR: 127.0.0.1:8096                     # 媒体服务器地址
  AUTH: 5fc6d09d96c34eb7b0636f0e770d3c68   # Emby API Key

Logger:                                     # 日志设置
  AccessLogger:                             # 访问日志设置
    Console: True                           # 控制台输出访问日志
    File: False                             # 不记录访问日志文件
  ServiceLogger:                            # 服务日志设置
    Console: True                           # 控制台输出服务日志
    File: True                              # 记录服务日志到文件

Web:                                        # Web 页面增强设置
  Enable: True                              # 启用 Web 增强功能
  Custom: True                              # 加载自定义静态资源
  Index: False                              # 使用自定义 index.html
  Head: ""                                  # 使用内置功能开关，避免重复加载
  Crx: True                                 # crx 美化插件支持
  ActorPlus: True                           # 过滤没有头像的演员
  FanartShow: False                         # 显示同人图
  ExternalPlayerUrl: True                   # 外置播放器支持（仅 Emby）
  Danmaku: True                             # 弹幕支持
  VideoTogether: True                       # 共同观影支持

ClientFilter:                               # 客户端过滤器
  Enable: False                             # 启用客户端过滤
  Mode: BlackList                           # 过滤模式：BlackList 或 WhiteList
  ClientList:                               # 客户端列表
    - Fileball
    - Infuse

HTTPStrm:
  Enable: True                              # 是否开启 HttpStrm 重定向
  TransCode: False                          # False：强制关闭转码 True：保持原有转码设置
  PrefixList:
    - /media/strm/http
    - /media/strm/https

# 媒体服务器配置（合并 HTTPStrm 和 RcloneSync）
MediaSync:                                  # 媒体服务器列表
  - Name: "115"                             # 服务器名称
    Remote: "115:"                          # rclone 远程名称
    LocalPath: "/Users/jonntd/data/media-server/media115/"
  - Name: "123"                             # 服务器名称
    Remote: "123:"                          # rclone 远程名称
    LocalPath: "/Users/jonntd/data/media-server/media123/"

Subtitle:                                   # 字幕处理设置（仅 Emby 支持）
  Enable: True                              # 启用字幕处理
  SRT2ASS: True                             # SRT 字幕转 ASS 字幕
  ASSStyle:                                 # ASS 字幕样式配置
    - "Format: Name, Fontname, Fontsize, PrimaryColour, SecondaryColour, OutlineColour, BackColour, Bold, Italic, Underline, StrikeOut, ScaleX, ScaleY, Spacing, Angle, BorderStyle, Outline, Shadow, Alignment, MarginL, MarginR, MarginV, Encoding"
    - "Style: Default,楷体,20,&H03FFFFFF,&H00FFFFFF,&H00000000,&H02000000,-1,0,0,0,100,100,0,0,1,1,0,2,10,10,10,1"

Debug: true                                # 调试模式开关